---
import Image from "astro/components/Image.astro";

interface Props {
  name: string;
  title: string;
  bio: string;
  image?: string;
  experience: Array<{
    company: string;
    role: string;
    duration: string;
    description: string;
  }>;
  class?: string;
}

const { name, title, bio, image, experience } = Astro.props;
---

<section id="about" class="about-section" aria-labelledby="about-title">
  <div class="about-container">
    <div class="about-content">
      <h2 class="about-heading" id="about-title">
        {name}
      </h2>
      <div class="about-hero">
        {
          image && (
            <div class="about-image">
              <Image src={image} alt="Austin Spillman" inferSize={true} />
            </div>
          )
        }
        <div class="about-intro">
          <h3 class="about-title">{title}</h3>
          <p class="about-bio">
            <span class="bio-intro"> Hi there! </span>
            {bio}
            <br />
            <br />I recently launched my own web design agency called KittyCode
            Creative, which you can <a href="kittycodecreative.com"
              >check out here</a
            >!
          </p>
        </div>
      </div>

      <div class="about-experience">
        <h3 class="experience-title">Experience</h3>
        <div class="experience-timeline">
          {
            experience.map((item, index) => (
              <div class="experience-item" style={`--delay: ${index * 0.1}s`}>
                <div class="experience-header">
                  <h4 class="experience-role">
                    {item.role} |{" "}
                    <span class="experience-company">{item.company}</span>
                  </h4>
                  <span class="experience-duration">{item.duration}</span>
                </div>
                <p class="experience-description">{item.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  #about {
    padding: 3rem 0;
    background: var(--background);
  }

  .about-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .about-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .about-hero {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-xl);
    align-items: center;
    animation: fadeInUp 0.8s ease-out;
  }

  .about-heading {
    text-align: center;
    position: relative;
    transform: translateX(calc(-72px / 2));
  }

  .about-image {
    position: relative;
    aspect-ratio: 1;
    border-radius: var(--radius);
    overflow: hidden;
    background: linear-gradient(
      135deg,
      hsl(from var(--primary) h s l / 0.1),
      hsl(from var(--Red) h s l / 0.05)
    );
    border: 1px solid hsl(from var(--border) h s l / 0.2);
  }

  .about-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .about-image:hover img {
    transform: scale(1.05);
  }

  .about-intro {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    position: relative;
  }

  lord-icon {
    padding-top: 10px;
    padding-right: 65px;
    transform: rotate(-25deg);
  }

  .about-title {
    color: var(--primary);
    width: 100%;
  }

  .about-bio {
    color: hsl(from var(--foreground) h s l / 0.7);
  }

  .about-experience {
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .experience-title {
    color: var(--foreground);
    margin-bottom: var(--space-3xs);
    position: relative;
    padding-bottom: 1rem;
  }

  .experience-timeline {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    position: relative;
  }

  .experience-timeline::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      180deg,
      var(--primary),
      hsl(from var(--primary) h s l / 0.3)
    );
  }

  .experience-item {
    position: relative;
    padding-left: 3rem;
    animation: slideInUp 0.6s ease-out var(--delay) both;
  }

  .experience-item::before {
    content: "";
    position: absolute;
    left: -6px;
    top: 0.5rem;
    width: 14px;
    height: 14px;
    background: var(--Red);
    border-radius: 50%;
    border: 3px solid var(--background);
    box-shadow: 0 0 0 2px var(--primary);
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-2xs);
  }

  .experience-role {
    color: var(--foreground);
  }

  .experience-duration {
    color: hsl(from var(--foreground) h s l / 0.6);
    font-weight: 500;
  }

  .experience-company {
    color: hsl(from var(--Red) h s l / 0.9);

    margin-bottom: var(--space-s);
  }

  .experience-description {
    font-size: var(--step--1);
    color: hsl(from var(--foreground) h s l / 0.7);
    line-height: 1.5;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .about-container {
      padding: 0 1rem;
    }

    .about-content {
      gap: var(--space-l);
    }

    .about-hero {
      grid-template-columns: 1fr;
      gap: var(--space-l);
      text-align: center;
    }

    .about-heading {
      text-align: center;
      position: relative;
      transform: translateX(calc(-58px / 2));
    }

    .about-image {
      max-width: 300px;
      margin: 0 auto;
    }

    lord-icon {
      padding-top: 10px;
      padding-right: 65px;
      height: 40px !important;
      width: 40px !important;
    }

    .experience-timeline::before {
      display: none;
    }

    .experience-item {
      padding-left: 0;
    }

    .experience-item::before {
      display: none;
    }

    .experience-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
</style>
