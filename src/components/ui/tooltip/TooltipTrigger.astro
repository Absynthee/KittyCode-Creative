---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class={`tooltip-trigger ${className}`}>
  <slot />
</div>

<style>
  .tooltip-trigger {
    display: inline-block;
    cursor: pointer;
  }

  .tooltip-trigger:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
    border-radius: 2px;
  }
</style>
