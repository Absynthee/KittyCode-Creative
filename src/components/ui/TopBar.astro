---
interface Props {
  content?: string;
  link?: string;
  hidden?: boolean;
}

const { content } = Astro.props;
---

<div class="top-banner">
  <a href={Astro.props.link || "/#"} target="_blank">
    {content}
  </a>
</div>

<style>
  .top-banner {
    position: relative;
    margin-top: 92px;
    padding-block: var(--space-2xs);
    width: 100%;
    background-color: var(--primary-background);
    overflow: hidden;
    text-align: center;
    color: var(--foreground);

    a {
      color: inherit;
      text-decoration: none;
      font-weight: 500;
    }
  }

  .visually-hidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    visibility: hidden;
    white-space: nowrap;
    /* position: absolute; */
    /* overflow: hidden; */
    /* height: 1px; */
    /* width: 1px; */
  }
</style>
