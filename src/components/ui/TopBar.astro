---
interface Props {
  content?: string;
  link?: string;
  hidden?: boolean;
}

const { content } = Astro.props;
---

<div class={`${Astro.props.hidden ? "visually-hidden" : "top-banner"}`}>
  <a href={Astro.props.link || "/#"} target="_blank">
    {content}
  </a>
</div>

<style>
  .top-banner {
    position: relative;
    margin-top: 92px;
    padding-block: var(--space-2xs);
    width: 100%;
    background-color: var(--primary-background);
    overflow: hidden;
    text-align: center;
    color: var(--foreground);

    a {
      color: inherit;
      text-decoration: none;
      font-weight: 500;
    }
  }

  .visually-hidden {
    position: absolute;
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    visibility: hidden;
    white-space: nowrap;
    overflow: hidden;
    width: 1px;
    /* height: 1px; */
  }

  @media screen and (max-width: 1200px) {
    .top-banner {
      margin-top: 80px;
    }
  }

  @media screen and (max-width: 950px) {
    .top-banner {
      margin-top: 88px;
    }
  }

  @media screen and (max-width: 768px) {
    .top-banner {
      margin-top: 70px;
    }
  }
</style>
