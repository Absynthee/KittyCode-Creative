---
interface Props {
  placeholder?: string;
  class?: string;
}

const { placeholder = "Select an option", class: className = "" } = Astro.props;
---

<span class={`select-value ${className}`}>
  {placeholder}
</span>

<style>
  .select-value {
    flex: 1;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .select-value.placeholder {
    color: hsl(from var(--foreground) h s l / 0.5);
  }
</style>
