---
export interface Props {
  variant?:
    | "default"
    | "primary"
    | "secondary"
    | "outline"
    | "ghost"
    | "info"
    | "success"
    | "warning"
    | "error";
  size?: "small" | "medium" | "large" | "icon" | "card";
  href?: string;
  type?: "button" | "submit" | "reset";
  disabled?: boolean;
  class?: string;
  target?: string;
}

const {
  variant = "default",
  size = "medium",
  href,
  type = "button",
  disabled = false,
  class: className = "",
  ...rest
} = Astro.props;

// Generate class names
const baseClasses = "btn";
const variantClass = `btn--${variant}`;
const sizeClass = `btn--${size}`;
const disabledClass = disabled ? "btn--disabled" : "";

const classes = [baseClasses, variantClass, sizeClass, disabledClass, className]
  .filter(Boolean)
  .join(" ");

// Choose element type
const Element = href ? "a" : "button";
const elementProps = href ? { href, ...rest } : { type, disabled, ...rest };
---

<Element class={classes} {...elementProps}>
  <slot />
</Element>

<style>
  /* Base Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    font-size: var(--step-0);
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    user-select: none;
    position: relative;
    overflow: hidden;
    width: fit-content;
    margin-block: var(--space-3xs);
    backdrop-filter: blur(24px);
  }

  .btn:hover,
  .btn:focus,
  .btn:focus-visible {
    scale: 1.05;
  }

  .btn:focus-visible {
    outline: 2px solid var(--Red);
    outline-offset: 2px;
  }

  .btn--disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .btn--disabled:hover {
    scale: unset;
  }

  /* Size Variants */
  .btn--small {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    font-size: var(--step--2);
    line-height: 1.25rem;
    line-height: var(--space-m);
    min-width: 11em;
  }

  .btn--medium {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-size: var(--step--1);
    line-height: 1.25rem;
    line-height: var(--space-m);
    min-width: 12em;
  }

  .btn--large {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-size: var(--step-0);
    line-height: 1.5rem;
    line-height: var(--space-m);
    min-width: 13em;
  }

  .btn--icon {
    padding: 0.5rem;
    width: 2.5rem;
    height: 2.5rem;
    min-width: unset;
  }

  .btn--icon:hover {
    scale: unset !important;
  }

  .btn--card {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-size: var(--step--1);
    line-height: 1.25rem;
    line-height: var(--space-m);
    min-width: 7em;
  }

  /* Style Variants */
  /* default unused, fallback to primary */
  .btn--default {
    background: hsl(from var(--primary) h s l / 0.15);
    color: var(--foreground);
    border-color: hsl(from var(--border) h s l / 0.2);
    backdrop-filter: blur(12px);
  }

  .btn--default:hover {
    background: hsl(from var(--primary) h s l / 0.1);
  }

  .btn--default,
  .btn--primary {
    background: var(--primary);
    color: var(--primary-foreground);
    border-color: hsl(from var(--border) h s l / 0.2);
  }

  .btn--default:hover,
  .btn--primary:hover {
    background: hsl(from var(--primary) h s l / 0.8);
  }

  .btn--secondary {
    background: var(--secondary);
    color: var(--secondary-foreground);
    border-color: hsl(from var(--border) h s l / 0.2);
  }

  .btn--secondary:hover {
    background: hsl(from var(--secondary) h s l / 0.8);
  }

  .btn--outline {
    background: transparent;
    color: var(--foreground);
    border-color: var(--border);
  }

  .btn--outline:hover {
    border-color: hsl(from var(--primary) h s l / 0.2);
  }

  .btn--ghost {
    background: transparent;
    color: var(--foreground);
    border-color: transparent;
  }

  .btn--ghost:hover {
    background: hsl(from var(--secondary) h s l / 0.2);
  }

  .btn--info {
    background: var(--info);
    color: var(--white);
  }

  .btn--info:hover {
    background: hsl(from var(--info) h s l / 0.8);
  }

  .btn--success {
    background: var(--success);
    color: var(--white);
  }

  .btn--success:hover {
    background: hsl(from var(--success) h s l / 0.8);
  }

  .btn--warning {
    background: var(--warning);
    color: var(--black);
  }

  .btn--warning:hover {
    background: hsl(from var(--warning) h s l / 0.8);
  }

  .btn--error {
    background: var(--error);
    color: var(--white);
  }

  .btn--error:hover {
    background: hsl(from var(--error) h s l / 0.8);
  }

  /* Responsive adjustments */
  @media screen and (max-width: 768px) {
    .btn--large {
      padding: 0.625rem 1.25rem;
    }
  }
</style>
