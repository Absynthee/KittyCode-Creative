---
import Layout from "@/layouts/Layout.astro";
import Button from "@/components/ui/Button.astro";
import { Home } from "@lucide/astro";
---

<Layout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist. Return to Austin Spillman's portfolio homepage."
  noindex={true}
>
  <main class="error-page">
    <section id="404" class="error-container" aria-labelledby="error-title">
      <div class="error-content">
        <div class="error-code" aria-hidden="true">404</div>

        <div class="error-message">
          <h1 id="error-title">Page Not Found</h1>
          <p>
            The page you're looking for doesn't exist or has been moved. Let's
            get you back on track.
          </p>
        </div>

        <div class="error-actions">
          <Button href="/" variant="primary" size="large">
            <Home size={20} />
            Back to Home
          </Button>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .error-page {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: var(--background);
  }

  .error-container {
    width: 100%;
    max-width: 600px;
    text-align: center;
    padding-top: 5rem;
  }

  .error-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  .error-code {
    font-family: "Bebas Neue", sans-serif;
    font-size: clamp(8rem, 15vw, 12rem);
    font-weight: 800;
    line-height: 0.8;
    color: hsl(from var(--Red) h s l / 0.2);
    user-select: none;
    pointer-events: none;
  }

  .error-message {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 50ch;
  }

  .error-message h1 {
    font-size: var(--step-3);
    color: var(--foreground);
    margin: 0;
  }

  .error-message p {
    font-size: var(--step-0);
    color: hsl(from var(--foreground) h s l / 0.7);
    line-height: 1.6;
    margin: 0;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .error-page {
      padding: 1rem;
    }

    .error-content {
      gap: 1.5rem;
    }

    .error-actions {
      flex-direction: column;
      width: 100%;
    }

    .error-actions :global(.btn) {
      width: 100%;
      max-width: 300px;
    }

    .error-message {
      gap: 0.75rem;
    }
  }

  @media screen and (max-width: 480px) {
    .error-code {
      font-size: clamp(6rem, 20vw, 8rem);
    }

    .error-message h1 {
      font-size: var(--step-2);
    }

    .error-message p {
      font-size: var(--step--1);
    }
  }

  /* Reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .help-link {
      transition: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .error-code {
      color: hsl(from var(--Red) h s l / 0.5);
    }
  }
</style>
