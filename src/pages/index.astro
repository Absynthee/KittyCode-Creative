---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/sections/Hero.astro";
import TopBar from "@/components/ui/TopBar.astro";
---

<Layout
  title="Web Design & Development Agency"
  description="KittyCode Creative, a bespoke web design agency in Eastbourne. Specialising in personalised web design and development, SEO, as well as logo services to enhance your online presence. Contact us today!"
>
  <TopBar
    content="KittyCode Creative - Bespoke Web Design & Development Agency in Eastbourne, East Sussex"
    link="https://kittycodecreative.com"
    hidden={true}
  />
  <Hero
    role="Welcome to KittyCode Creative"
    name="Web Design & Development"
    primaryCTA={{
      text: "Our Services",
      href: "#services",
    }}
    secondaryCTA={{
      text: "Contact Us",
      href: "#contact",
    }}
    bio="KittyCode Creative is a web design agency based in Eastbourne, East Sussex. We specialise in creating beautiful, professional, responsive and accessible websites, as well as front-end web development and design solutions. Check out our portfolio below, or contact us for more information."
  />
</Layout>
